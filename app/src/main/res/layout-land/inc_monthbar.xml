<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/dateBox" style="@style/dateBox" android:background="?button_bar_bg" android:baselineAligned="false" android:orientation="horizontal">
	
    <LinearLayout android:layout_width="fill_parent" android:layout_weight="1" android:layout_height="fill_parent" android:baselineAligned="false">
        <ImageButton android:id="@+id/monthPrev" android:src="@drawable/navigation_previous_item" android:background="?buttonstate" android:layout_height="fill_parent" android:layout_width="48dp" android:layout_weight="0.01" android:layout_marginRight="1px" android:contentDescription="@string/prevMonth"/>
        <LinearLayout android:id="@+id/monthButton" style="@style/currentDateButton" android:background="?buttonstate" android:layout_height="fill_parent" android:layout_width="wrap_content" android:layout_weight="1" android:orientation="vertical" android:padding="8dp" android:gravity="center_vertical">
            <TextView
                android:id="@+id/month"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="?button_text"
                android:textSize="20sp"
                android:gravity="center"
                />
        </LinearLayout>
        <ImageButton android:id="@+id/monthNext" android:src="@drawable/navigation_next_item" android:background="?buttonstate" android:layout_height="fill_parent" android:layout_width="48dp" android:layout_weight="0.01" android:layout_marginLeft="1px" android:contentDescription="@string/nextMonth"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/zoneButton"
        android:background="?buttonstate"
        android:layout_marginLeft="1px"
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:layout_height="fill_parent"
        android:gravity="center_vertical"
        android:padding="5dp">
        <TextView android:id="@+id/zoneName" style="@style/zoneName"/>
        <TextView android:id="@+id/zoneCities" style="@style/zoneCities" android:layout_below="@id/zoneName"/>
    </RelativeLayout>

</LinearLayout>