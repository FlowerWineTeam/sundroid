<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/yearEvent"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:baselineAligned="false"
    android:clickable="true"
    android:focusable="true"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/yearEventDateMonth"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="2dp">

        <TextView
            android:id="@+id/yearEventDate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:textColor="?body_text"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/yearEventMonth"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-1dp"
            android:layout_marginBottom="12dp"
            android:gravity="center_horizontal"
            android:textColor="?body_text"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_weight="0.1"
        android:gravity="center">

        <ImageView
            android:id="@+id/yearEventImg"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:scaleType="fitXY"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.7"
        android:orientation="vertical">

        <TextView
            android:id="@+id/yearEventTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="?body_text"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/yearEventTime"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="?secondary_text"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/yearEventSubtitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="?secondary_text"
            android:textSize="14sp"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:layout_gravity="center_vertical"
        android:paddingRight="10dp">

        <ImageView
            android:id="@+id/yearEventLink"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="5dp"
            android:scaleType="fitXY"
            android:src="?info"
            android:visibility="invisible" />
    </LinearLayout>

</LinearLayout>