<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">

    <LinearLayout
        android:id="@+id/dayDetailTabs"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="?tab_bar_bg"
        android:orientation="horizontal">
	    <TextView
	        android:id="@+id/sunTabInactive"
	        style="@style/tabInactive"
            android:layout_marginRight="1px"
	        android:text="SUN"/>
	    <TextView
	        android:id="@+id/sunTabActive"
	        style="@style/tabActive"
            android:layout_marginRight="1px"
	        android:text="SUN"/>
	    <TextView
	        android:id="@+id/moonTabInactive"
	        style="@style/tabInactive"
            android:layout_marginRight="1px"
	        android:text="MOON"/>
	    <TextView
	        android:id="@+id/moonTabActive"
	        style="@style/tabActive"
            android:layout_marginRight="1px"
	        android:text="MOON"/>
	    <TextView
	        android:id="@+id/planetsTabInactive"
	        style="@style/tabInactive"
            android:layout_marginRight="1px"
	        android:text="PLANETS"/>
	    <TextView
	        android:id="@+id/planetsTabActive"
	        style="@style/tabActive"
            android:layout_marginRight="1px"
	        android:text="PLANETS"/>
	    <TextView
	        android:id="@+id/eventsTabInactive"
	        style="@style/tabInactive"
	        android:text="EVENTS"/>
	    <TextView
	        android:id="@+id/eventsTabActive"
	        style="@style/tabActive"
	        android:text="EVENTS"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dataFragment"
		android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/dayDetailTabs"/>

</RelativeLayout>
