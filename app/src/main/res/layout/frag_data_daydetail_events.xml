<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:s="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <uk.co.sundroid.util.view.BoundedLinearLayout
            android:id="@+id/eventsDataBox"
            android:layout_gravity="center_horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            s:bounded_width="@dimen/column_max_width"
            android:orientation="vertical"
            android:padding="@dimen/content_pane_padding"
            android:visibility="gone">

        <LinearLayout
                android:id="@+id/eventsNone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                >
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="15dp"
                    android:src="?info"/>
            <TextView
                    android:text="No events selected.\nTap the settings icon above to select events."
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:gravity="center_horizontal"
                    android:textColor="?secondary_text"
                    android:textSize="16sp"/>
        </LinearLayout>

        <TableLayout
                android:id="@+id/eventsTable"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >
        </TableLayout>
    </uk.co.sundroid.util.view.BoundedLinearLayout>

</ScrollView>
