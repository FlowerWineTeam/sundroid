<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dateBox"
    style="@style/dateBox"
    android:baselineAligned="false"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="?actionBarSize">

        <ImageButton
            android:id="@+id/yearPrev"
            style="@style/dateBoxButton"
            android:padding="0dp"
            android:src="@drawable/navigation_previous_item"
            android:layout_width="?actionBarSize"
            android:contentDescription="@string/prevYear" />

        <LinearLayout
            android:id="@+id/yearButton"
            style="@style/dateBoxButton"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/year"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="?button_text"
                android:textSize="20sp"/>
        </LinearLayout>

        <ImageButton
            android:id="@+id/yearNext"
            style="@style/dateBoxButton"
            android:src="@drawable/navigation_next_item"
            android:layout_width="?actionBarSize"
            android:contentDescription="@string/nextYear" />
    </LinearLayout>

    <include layout="@layout/inc_zonebutton"/>
</LinearLayout>