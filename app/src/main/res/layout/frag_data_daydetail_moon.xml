<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:s="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

    <include
            layout="@layout/inc_datebar"
            android:id="@+id/incDateBar"
            android:layout_alignParentBottom="true"/>

    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@id/incDateBar"
            >

        <uk.co.sundroid.util.view.BoundedLinearLayout
                android:id="@+id/moonDataBox"
                android:layout_gravity="center_horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                s:bounded_width="@dimen/column_max_width"
                android:orientation="vertical"
                android:padding="@dimen/content_pane_padding"
                android:visibility="gone">
            <LinearLayout
                    android:id="@+id/moonEvent"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:orientation="vertical">
                <TextView
                        style="@style/text"
                        android:id="@+id/moonEventTitle"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:gravity="center_horizontal"/>
                <TextView
                        style="@style/text"
                        android:id="@+id/moonEventSubtitle"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="?secondary_text"
                        android:gravity="center_horizontal"/>
                <View style="@style/listMenuDivider" android:layout_marginTop="10dp"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                    <ImageView
                            android:id="@+id/moonImage"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:maxWidth="150dp"
                            android:maxHeight="150dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/moon"
                            android:paddingLeft="7dp"
                            android:paddingRight="8dp"
                            android:paddingBottom="10dp"
                            android:paddingTop="5dp"
                            android:layout_marginLeft="5dp"/>
                </RelativeLayout>

                <TextView
                        android:id="@+id/moonSpecial"
                        android:textColor="?body_text"
                        android:textSize="22sp"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:visibility="gone"
                        android:paddingBottom="15dp"/>

                <LinearLayout
                        android:id="@+id/moonEvtsRow"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="15dp"
                        android:baselineAligned="false">

                    <LinearLayout
                            android:id="@+id/moonEvt1"
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                        <ImageView
                                android:id="@+id/moonEvt1Img"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                />
                        <TextView
                                android:id="@+id/moonEvt1Time"
                                style="@style/text"
                                android:textSize="32sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        <TextView
                                android:id="@+id/moonEvt1Az"
                                style="@style/text"
                                android:textSize="16sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                            android:id="@+id/moonEvt2"
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                        <ImageView
                                android:id="@+id/moonEvt2Img"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                />
                        <TextView
                                android:id="@+id/moonEvt2Time"
                                style="@style/text"
                                android:textSize="32sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        <TextView
                                android:id="@+id/moonEvt2Az"
                                style="@style/text"
                                android:textSize="16sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>

                </LinearLayout>

                <View style="@style/listMenuDivider" android:layout_marginBottom="15dp" android:id="@+id/moonTransitUptimeDivider"/>

                <LinearLayout
                        android:id="@+id/moonTransitUptime"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="15dp"
                        android:baselineAligned="false">

                    <LinearLayout
                            android:id="@+id/moonTransit"
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">
                        <TextView
                                style="@style/text"
                                android:textSize="14sp"
                                android:textColor="?secondary_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="TRANSIT"/>
                        <TextView
                                android:id="@+id/moonTransitTime"
                                style="@style/text"
                                android:textSize="20sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                            android:id="@+id/moonUptime"
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">
                        <TextView
                                style="@style/text"
                                android:textSize="14sp"
                                android:textColor="?secondary_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="UPTIME"/>
                        <TextView
                                android:id="@+id/moonUptimeTime"
                                style="@style/text"
                                android:textSize="20sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>


                </LinearLayout>

                <View style="@style/listMenuDivider" android:layout_marginBottom="15dp"/>

                <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="15dp"
                        android:baselineAligned="false">

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">
                        <TextView
                                style="@style/text"
                                android:textSize="14sp"
                                android:textColor="?secondary_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="PHASE &amp; ILLUMINATION"/>
                        <TextView
                                android:id="@+id/moonPhase"
                                style="@style/text"
                                android:textSize="20sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        <TextView
                                android:id="@+id/moonIllumination"
                                style="@style/text"
                                android:textSize="20sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>

                </LinearLayout>

                <View style="@style/listMenuDivider" android:layout_marginBottom="15dp"/>

                <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="15dp"
                        android:baselineAligned="false">

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.25"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">
                        <ImageView
                                android:id="@+id/moonPhase1Img"
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_margin="5dp"
                                android:maxWidth="18dp"
                                android:maxHeight="18dp"
                                android:scaleType="fitXY"/>
                        <TextView
                                style="@style/text"
                                android:id="@+id/moonPhase1Label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="4dp"/>
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.25"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">
                        <ImageView
                                android:id="@+id/moonPhase2Img"
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_margin="5dp"
                                android:maxWidth="18dp"
                                android:maxHeight="18dp"
                                android:scaleType="fitXY"/>
                        <TextView
                                style="@style/text"
                                android:id="@+id/moonPhase2Label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="4dp"/>
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.25"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">
                        <ImageView
                                android:id="@+id/moonPhase3Img"
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_margin="5dp"
                                android:maxWidth="18dp"
                                android:maxHeight="18dp"
                                android:scaleType="fitXY"/>
                        <TextView
                                style="@style/text"
                                android:id="@+id/moonPhase3Label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="4dp"/>
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.25"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">
                        <ImageView
                                android:id="@+id/moonPhase4Img"
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_margin="5dp"
                                android:maxWidth="18dp"
                                android:maxHeight="18dp"
                                android:scaleType="fitXY"/>
                        <TextView
                                style="@style/text"
                                android:id="@+id/moonPhase4Label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="4dp"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </uk.co.sundroid.util.view.BoundedLinearLayout>

    </ScrollView>

</RelativeLayout>