        <RelativeLayout style="@style/calendarSelectorRow">

            <ImageButton
                android:id="@+id/calendarSaturnRiseSetGrid"
                style="@style/calendarSelectorGrid" />

            <ImageButton
                android:id="@+id/calendarSaturnRiseSetList"
                style="@style/calendarSelectorList"
                android:layout_toStartOf="@id/calendarSaturnRiseSetGrid" />

            <TextView
                style="@style/calendarSelectorLabel"
                android:layout_toStartOf="@id/calendarSaturnRiseSetList"
                android:text="Saturn rise and set" />
        </RelativeLayout>

        <RelativeLayout style="@style/calendarSelectorRow">

            <ImageButton
                android:id="@+id/calendarUranusRiseSetGrid"
                style="@style/calendarSelectorGrid" />

            <ImageButton
                android:id="@+id/calendarUranusRiseSetList"
                style="@style/calendarSelectorList"
                android:layout_toStartOf="@id/calendarUranusRiseSetGrid" />

            <TextView
                style="@style/calendarSelectorLabel"
                android:layout_toStartOf="@id/calendarUranusRiseSetList"
                android:text="Uranus rise and set" />
        </RelativeLayout>

        <RelativeLayout style="@style/calendarSelectorRow">

            <ImageButton
                android:id="@+id/calendarNeptuneRiseSetGrid"
                style="@style/calendarSelectorGrid" />

            <ImageButton
                android:id="@+id/calendarNeptuneRiseSetList"
                style="@style/calendarSelectorList"
                android:layout_toStartOf="@id/calendarNeptuneRiseSetGrid" />

            <TextView
                style="@style/calendarSelectorLabel"
                android:layout_toStartOf="@id/calendarNeptuneRiseSetList"
                android:text="Neptune rise and set" />
        </RelativeLayout>

    </LinearLayout>

</ScrollView>