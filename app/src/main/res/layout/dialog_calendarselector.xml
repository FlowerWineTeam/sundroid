<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="?primary_color">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <RelativeLayout style="@style/calendarSelectorRow">

            <ImageButton
                android:id="@+id/calendarSunRiseSetGrid"
                style="@style/calendarSelectorGrid" />

            <ImageButton
                android:id="@+id/calendarSunRiseSetList"
                style="@style/calendarSelectorList"
                android:layout_toStartOf="@id/calendarSunRiseSetGrid" />

            <TextView
                style="@style/calendarSelectorLabel"
                android:layout_toStartOf="@id/calendarSunRiseSetList"
                android:text="Sunrise and sunset" />
        </RelativeLayout>

        <RelativeLayout style="@style/calendarSelectorRow">

            <ImageButton
                android:id="@+id/calendarCivilDawnDuskGrid"
                style="@style/calendarSelectorGrid" />

            <ImageButton
                android:id="@+id/calendarCivilDawnDuskList"
                style="@style/calendarSelectorList"
                android:layout_toStartOf="@id/calendarCivilDawnDuskGrid" />

            <TextView
                style="@style/calendarSelectorLabel"
                android:layout_toStartOf="@id/calendarCivilDawnDuskList"
                android:text="Civil dawn and dusk" />
        </RelativeLayout>

        <RelativeLayout style="@style/calendarSelectorRow">

            <ImageButton
                android:id="@+id/calendarNauticalDawnDuskGrid"
                style="@style/calendarSelectorGrid" />

            <ImageButton
                android:id="@+id/calendarNauticalDawnDuskList"
                style="@style/calendarSelectorList"
                android:layout_toStartOf="@id/calendarNauticalDawnDuskGrid" />

            <TextView
                style="@style/calendarSelectorLabel"
                android:layout_toStartOf="@id/calendarNauticalDawnDuskList"
                android:text="Nautical dawn and dusk" />
        </RelativeLayout>

        <RelativeLayout style="@style/calendarSelectorRow">

            <ImageButton
                android:id="@+id/calendarAstronomicalDawnDuskGrid"
                style="@style/calendarSelectorGrid" />

            <ImageButton
                android:id="@+id/calendarAstronomicalDawnDuskList"
                style="@style/calendarSelectorList"
                android:layout_toStartOf="@id/calendarAstronomicalDawnDuskGrid" />

            <TextView
                style="@style/calendarSelectorLabel"
                android:layout_toStartOf="@id/calendarAstronomicalDawnDuskList"
                android:text="Astronomical dawn and dusk" />
        </RelativeLayout>

        <RelativeLayout style="@style/calendarSelectorRow">

            <ImageButton
                android:id="@+id/calendarDaylightGrid"
                style="@style/calendarSelectorGrid" />

            <ImageButton
                android:id="@+id/calendarDaylightList"
                style="@style/calendarSelectorList"
                android:layout_toStartOf="@id/calendarDaylightGrid" />

            <TextView
                style="@style/calendarSelectorLabel"
                android:layout_toStartOf="@id/calendarDaylightList"
                android:text="Length of daylight" />
        </RelativeLayout>

        <View
            style="@style/listMenuDivider"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" />

        <RelativeLayout style="@style/calendarSelectorRow">

            <ImageButton
                android:id="@+id/calendarMoonRiseSetGrid"
                style="@style/calendarSelectorGrid" />

            <ImageButton
                android:id="@+id/calendarMoonRiseSetList"
                style="@style/calendarSelectorList"
                android:layout_toStartOf="@id/calendarMoonRiseSetGrid" />

            <TextView
                style="@style/calendarSelectorLabel"
                android:layout_toStartOf="@id/calendarMoonRiseSetList"
                android:text="Moonrise and moonset" />
        </RelativeLayout>

        <View
            style="@style/listMenuDivider"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" />

        <RelativeLayout style="@style/calendarSelectorRow">

            <ImageButton
                android:id="@+id/calendarMercuryRiseSetGrid"
                style="@style/calendarSelectorGrid" />

            <ImageButton
                android:id="@+id/calendarMercuryRiseSetList"
